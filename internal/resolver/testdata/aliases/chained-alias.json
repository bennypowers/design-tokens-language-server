{
  "$schema": "https://www.designtokens.org/schemas/draft.json",
  "color": {
    "red": {
      "$type": "color",
      "$value": "#FF0000"
    },
    "brand": {
      "$type": "color",
      "$value": "{color.red}"
    },
    "primary": {
      "$type": "color",
      "$value": "{color.brand}"
    },
    "accent": {
      "$type": "color",
      "$value": "{color.primary}"
    }
  }
}
