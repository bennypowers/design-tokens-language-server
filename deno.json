{
  "tasks": {
    "dev": "npx nodemon -e ts,json,rs -x 'deno task build'",
    "bundle": "deno -A build.ts",
    "compile": {
      "command": "deno compile --unstable-temporal --allow-all --no-check --output bin/design-tokens-language-server dist/main.js --stdio",
      "dependencies": [
        "bundle"
      ]
    },
    "copy": {
      "command": "cp bin/design-tokens-language-server /var/home/bennyp/.local/bin/design-tokens-language-server",
      "dependencies": [
        "compile"
      ]
    },
    "vscode:copy": {
      "command": "mkdir -p extensions/vscode/dist && cp -r main.js bin extensions/vscode/dist && cp $(which deno) extensions/vscode/dist/bin/",
      "dependencies": [
        "compile",
        "copy"
      ]
    },
    "vscode:build": {
      "command": "npm run build --prefix extensions/vscode",
      "dependencies": [
        "compile",
        "vscode:copy"
      ]
    },
    "vscode:install": {
      "command": "flatpak run --command='bash -c codium --install-extension /var/home/bennyp/Developer/design-tokens-language-server/extensions/vscode/design-tokens-language-server-vscode:1.0.0.vsix' com.vscodium.codium",
      "dependencies": [
        "vscode:build"
      ]
    },
    "zed:copy": {
      "command": "mkdir -p extensions/zed/dist && cp -r main.js bin extensions/zed/dist/",
      "dependencies": [
        "compile",
        "copy"
      ]
    },
    "zed:build": {
      "dependencies": [
        "zed:copy"
      ]
    },
    "build": {
      "command": "echo DONE",
      "dependencies": [
        "vscode:build",
        "zed:build",
        "copy"
      ]
    }
  },
  "imports": {
    "@luca/esbuild-deno-loader": "jsr:@luca/esbuild-deno-loader@^0.11.1",
    "@std/assert": "jsr:@std/assert@1",
    "style-dictionary": "npm:style-dictionary@^4.3.3",
    "vscode-languageserver-protocol": "npm:vscode-languageserver-protocol@^3.17.5"
  }
}
