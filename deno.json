{
  "tasks": {
    "dev": "npx nodemon -e ts,json,rs -x 'deno task build'",
    "compile": "deno compile --unstable-temporal -A --output bin/design-tokens-language-server main.ts --stdio",
    "copy": {
      "command": "cp bin/design-tokens-language-server /var/home/bennyp/.local/bin/design-tokens-language-server",
      "dependencies": [
        "compile"
      ]
    },
    "vscode:copy": {
      "command": "mkdir -p extensions/vscode/bin && cp bin/design-tokens-language-server extensions/vscode/bin/design-tokens-language-server",
      "dependencies": [
        "compile"
      ]
    },
    "vscode:build": {
      "command": "npm run build --prefix extensions/vscode",
      "dependencies": [
        "compile",
        "vscode:copy"
      ]
    },
    "vscode:install": {
      "command": "flatpak run --command='bash -c codium --install-extension /var/home/bennyp/Developer/design-tokens-language-server/extensions/vscode/design-tokens-language-server-vscode:1.0.0.vsix' com.vscodium.codium",
      "dependencies": [
        "vscode:build"
      ]
    },
    "zed:copy": {
      "command": "mkdir -p extensions/zed/bin && cp bin/design-tokens-language-server extensions/zed/bin/design-tokens-language-server",
      "dependencies": [
        "compile"
      ]
    },
    "zed:build": {
      "dependencies": [
        "zed:copy"
      ]
    },
    "build": {
      "command": "echo DONE",
      "dependencies": [
        "vscode:build",
        "zed:build",
        "copy"
      ]
    }
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "style-dictionary": "npm:style-dictionary@^4.3.3",
    "vscode-languageserver-protocol": "npm:vscode-languageserver-protocol@^3.17.5"
  }
}
