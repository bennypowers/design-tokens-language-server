{
  "$schema": "https://www.designtokens.org/schemas/2025.10.json",
  "color": {
    "$root": {
      "$type": "color",
      "$value": {
        "colorSpace": "srgb",
        "components": [1.0, 0, 0],
        "alpha": 1.0
      },
      "$description": "Default color using $root"
    },
    "primary": {
      "$type": "color",
      "$value": {
        "colorSpace": "srgb",
        "components": [1.0, 0.42, 0.21],
        "alpha": 1.0,
        "hex": "#FF6B35"
      }
    },
    "secondary": {
      "$ref": "#/color/primary"
    }
  },
  "spacing": {
    "small": {
      "$type": "dimension",
      "$value": "8px"
    }
  }
}
